      name: direct
  identity:
    hostname: ubuntu2404
    username: ubuntu
    password: "$6$pLPVIGqqsVc4NZJ3$qQiPaNR.jFFFQ.UYkQNeHPH9ktWDWanDh2QjNqtG1T4htiklT0WSATVK8uw6yZvYgetVxDFI/5INdqmuVRcw41"
  ssh:
