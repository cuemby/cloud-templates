    - 'sed -i "s/#PermitRootLogin prohibit-password/PermitRootLogin yes/g" /target/etc/ssh/sshd_config'
    - 'sed -i "s/#PasswordAuthentication yes/PasswordAuthentication yes/g" /target/etc/ssh/sshd_config'
    - 'sed -i "s/PasswordAuthentication no/PasswordAuthentication yes/g" /target/etc/ssh/sshd_config'
    - 'echo "root:ubuntu" | chroot /target chpasswd'
    - 'chroot /target systemctl enable ssh'
