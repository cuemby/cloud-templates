    layout:
      name: direct
  identity:
    hostname: ubuntu2404
    username: ubuntu
    password: "$6$j5S85NAKwgQqlG76$isakpSubUTOCGfN5Wc1tOeyPJCaaTJUEpzlkAdSMp.JaDx6RugsQ./H7y.XjGcIyM1If3dfrhMyvlYv456ljq."
  ssh:
